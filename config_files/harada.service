[Unit]
Description=gunicorn daemon for harada.global
After=network.target

[Service]
User=deploy
Group=www-data
WorkingDirectory=/srv/harada
Environment=DJANGO_SETTINGS_MODULE=config.settings
EnvironmentFile=-/srv/harada/.env
ExecStart=/srv/harada/.venv/bin/gunicorn --config /srv/harada/gunicorn_config.py

[Install]
WantedBy=multi-user.target

